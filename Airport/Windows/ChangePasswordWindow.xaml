<Window x:Class="Airport.Windows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airport.Windows"
        mc:Ignorable="d" Background="#2F3136"
        Title="Смена пароля" Height="350" Width="275" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="/Airport;component/Resources/logo.png">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Введите текущий пароль" HorizontalAlignment="Center" Margin="0 20 0 5"></TextBlock>
            <PasswordBox Name="passOld" Margin="5"></PasswordBox>

            <TextBlock Text="Введите новый пароль" HorizontalAlignment="Center" Margin="0 20 0 5"></TextBlock>
            <PasswordBox Name="passNew" Margin="5"></PasswordBox>

            <TextBlock Text="Подтвердите новый пароль" HorizontalAlignment="Center" Margin="0 20 0 5"></TextBlock>
            <PasswordBox Name="passNewConfirm" Margin="5"></PasswordBox>

            <Button Content="Подтвердить" Name="btnConfirmPassword" Click="btnConfirmPassword_Click" Margin="0 20 0 0"></Button>


        </StackPanel>

    </Grid>
</Window>
